<div class='chat-room-form'>
  <h1>新規しおり作成</h1>
  <%= form_with model: @schedule, url: "/sioris/#{@siori}/schedules", local: true do |f| %>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :image, :Top画像, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.file_field :image %>
      </div>
    </div>
        <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :time_id, :開始時刻, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.time_field :time_id, class: 'chat__room_name schedule-time-form_input' %>
      </div>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :title, :タイトル, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :title, class: 'chat__room_name chat-room-form__input', placeholder: 'スケジュール名を入力してください'%>
      </div>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :place, :場所, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :place, class: 'chat__room_name chat-room-form__input', placeholder: '場所を入力してください'%>
      </div>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :map_link, :GoogleMap_URL, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :map_link, class: 'chat__room_name chat-room-form__input', placeholder: 'GoogleMapのリンクを入力してください'%>
      </div>
    </div>
     <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :memo, :メモ, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_area :memo, class: 'chat__room_name schedule-memo-form_input', placeholder: 'メモを入力してください'%>
      </div>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--right'>
        <%= f.submit class: 'chat-room-form__action-btn'%>
      </div>
    </div>
  <% end %>
</div>