<div class="wrapper">
  <div class="side-bar">

    <div class="side-bar-header">
      <div class="siori-title">
        <%= @siori.title %>
      </div>
      <div>
        <%= "期間：#{@siori.start_day}〜【#{@siori.day}日間】 参加者：#{User.find(@siori.user_ids[0]).nickname}/ #{User.find(@siori.user_ids[1]).nickname}/ #{User.find(@siori.user_ids[2]).nickname}" %>
      </div>
    </div>

    <% n=1 %>
    <% @siori.day.to_i.times do %>
    <div class="schedule">
      <div class="day-schedule">
        <div class="schedule-day">
        <%= "Day#{n}" %><%= link_to("<予定を追加する>", "/sioris/#{@siori.id}/schedules/new", {class: "add-schedule"}) %>
        </div>
        <% @schedule.each do |schedule| %>
        <% if schedule.day == "#{n}" then %>
        <div class="col-md-6">
          <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
              <strong class="d-inline-block mb-2 text-primary"><%= "#{schedule.time}" %></strong>
              <h3 class="mb-0"><%= "#{schedule.title}" %></h3>
              <div class="mb-1 text-muted"><%= "場所：#{schedule.place}" %><%= "＜#{schedule.map_link}＞" %></div>
              <div class="schedule-memo">
                <%= "#{schedule.memo}" %>
              </div>
              <%= link_to "<削除>", "/sioris/#{@siori.id}/schedules/#{schedule.id}", method: :delete %>
            </div>
            <div class="col-auto d-none d-lg-block">
              <%= image_tag schedule.image, size: '200x200'%>
            </div>
            <div class="col-auto d-none d-lg-block">
              Album→
              <%= image_tag 'icon_album.png', size: '40x40'%>
            </div>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
    <% n += 1%>
    <% end %>

  </div>
  <div class="chat">
    <%= render "main_chat" %>
  </div>
</div>