<%= render "shared/header2" %>
<div class='item-contents'>
  <h2 class='title'>写真一覧</h2>
  <div class="subtitle" >
    <%= link_to("<写真を追加する>", "/sioris/#{@siori}/schedules/#{@schedule}/albums/new", {class: "schedule-edit"}) %>
  </div>
  <div class='album-contents'>
  <% if @photos.present? %>
    <% @photos.each do |photo| %>
       <ul class="album-content">
        <li><%= image_tag photo.image, class: "item-img" %></li>
        <li><%= "#{photo.comment}" %></li>
        <li><%= link_to("<編集する>", "/sioris/#{@siori}/schedules/#{@schedule}/albums/#{photo.id}/edit", {class: "schedule-edit"}) %><%= link_to "<削除する>", "/sioris/#{@siori}/schedules/#{@schedule}/albums/#{photo.id}", method: :delete, data: { confirm: '本当に削除しますか？' } %></li>
      </ul>
    <% end %>
  <% else %>
  <div class="album-no-content">
    このアルバムにはまだ写真がありません
  </div>
  <% end %>
  </div>
</div>
<%= render "shared/footer" %>